{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "allowJs": true,
    "types": ["node", "cypress", "cypress-react-selector", "vite-plugin-svgr/client"],
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "jsxImportSource": "@emotion/react",
    /* 절대 경로 */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "apis/*": ["src/apis/*"],
      "assets/*": ["src/assets/*"],
      "components/*": ["src/components/*"],
      "constants/*": ["src/constants/*"],
      "hooks/*": ["src/hooks/*"],
      "pages/*": ["src/pages/*"],
      "store/*": ["src/store/*"],
      "styles/*": ["src/styles/*"],
      "tests/*": ["src/__tests__/*"],
      "types/*": ["src/types/*"],
      "utils/*": ["src/utils/*"],
      "routes/*": ["src/routes/*"]
    }
  },
  "include": ["src", "**/*.*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
